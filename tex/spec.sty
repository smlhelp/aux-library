% spec
\newrobustcmd{\spec}[4]{
    \begin{mdframed}[backgroundcolor=brightColor,
         linecolor=auxColor,
          linewidth=4pt,
          topline=false,
            rightline=false,
         bottomline=false]
         \hspace{-20pt}\mainBox{\bfseries\strut \;Specification:\ \texttt{#1}\hspace{20pt}}
    \par\noindent\code{#1 : #2}
    \ifstrempty{#3}{}{\par\noindent REQUIRES: #3}
    \ifstrempty{#4}{}{\par\noindent ENSURES: #4}
    \end{mdframed}
}
\newrobustcmd{\Spec}[4]{
    \begin{mdframed}[backgroundcolor=brightColor,
         linecolor=auxColor,
          linewidth=4pt,
          topline=false,
            rightline=false,
         bottomline=false]
         \hspace{-20pt}\mainBox{\bfseries\strut \;Specification:\ \texttt{#1}\hspace{20pt}}
    \begin{flalign*}
        \code{#1} &: #2 &&
    \end{flalign*}
    \ifstrempty{#3}{}{\par\noindent REQUIRES: #3}
    \ifstrempty{#4}{}{\par\noindent ENSURES: #4}
    \end{mdframed}
}

